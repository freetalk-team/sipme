
<h1 class="wm8"><%- summary %></h1>

<table>
	<tbody>
		<tr>
			<td><b>ID</b></td>
			<td class="monospace"><b><%- id %></b></td>
		</tr>
		<tr>
			<td><b>Type</b></td>
			<td class="monospace"><b><%- type %></b></td>
		</tr>
		<tr>
			<td><b>Component</b></td>
			<td class="monospace"><b><%- component %></b></td>
		</tr>
		
		<tr>
			<td><b>Milestone</b></td>
			<td class="monospace"><b><%- milestone %></b></td>
		</tr>
		<tr>
			<td><b>Severity</b></td>
			<td class="monospace"><b><%- severity %></b></td>
		</tr>
		<tr>
			<td><b>Created</b></td>
			<td class="monospace"><i><%- Date.formatDate(time) %></i></td>
		</tr>
		<tr>
			<td><b>Updated</b></td>
			<td class="monospace"><time><%- Date.formatDateShort(changetime) %></time></td>
		</tr>
		<tr>
			<td><b>Reporter</b></td>
			<td><a><%- reporter %></a></td>
		</tr>
		<tr>
			<td><b>Priority</b></td>
			<td><span><%- priority %></span></td>
		</tr>
		<tr>
			<td><b>Status</b></td>
			<td><span><%- status %></span></td>
		</tr>
		<tr>
			<td><b>Owner</b></td>
			<td class="cr m5"><a><%- owner %></a></td>
		</tr>
	</tbody>
</table>

<div class="md inconsolata-p">
	<%- description %>
</div>

<div class="cc">

<% for (const i of change) { %>

	<div class="cc">

		<div class="cr ci m10">
			<b><%- i.name %></b>
			<b class="fit wm6 smaller"><%- i.field == 'comment' ? 'commented' : 'changed ' + i.field %></b>
			<i class="smaller monospace wm8"><%- Date.formatDateShort(i.time) %></i>
		</div>
		<% if (i.field == 'comment') { %>
			<div class="md nomargin compact w3-margin-bottom">
				<%- markdown(i.newvalue) %>
			</div>
		<% } %>
	</div>

<% } %>

</div>